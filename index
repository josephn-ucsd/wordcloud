<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Word Cloud Generator</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      margin: 20px;
    }
    #word-cloud {
      width: 500px;
      height: 500px;
      margin: 20px auto;
      border: 1px solid #ccc;
    }
    input, button {
      padding: 10px;
      margin: 5px;
    }
  </style>
</head>
<body>
  <h1>Word Cloud Generator</h1>
  <p>Enter words separated by spaces to create a word cloud:</p>
  <input type="text" id="words" placeholder="Enter words here" style="width: 70%;">
  <button onclick="generateWordCloud()">Generate Word Cloud</button>
  <div id="word-cloud"></div>
  
  <script>
    function generateWordCloud() {
      const words = document.getElementById('words').value.split(' ');
      const container = document.getElementById('word-cloud');
      container.innerHTML = ''; // Clear previous word cloud
      
      words.forEach(word => {
        const span = document.createElement('span');
        span.textContent = word;
        span.style.fontSize = `${Math.random() * 30 + 10}px`;
        span.style.margin = '5px';
        span.style.display = 'inline-block';
        span.style.color = `hsl(${Math.random() * 360}, 70%, 50%)`;
        container.appendChild(span);
      });
    }
  </script>
</body>
</html>
